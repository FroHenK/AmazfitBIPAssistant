<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/NoShadowButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#AAA</item>
        <item name="android:textColorPrimary">#AAA</item>
        <item name="android:textColorSecondary">#AAA</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">#EEE</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoShadowButton" parent="Widget.AppCompat.Button">

        <item name="android:textColor">#AAA</item>
        <item name="android:drawable">@drawable/button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
